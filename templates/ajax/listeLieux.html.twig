<div class="row mb-2">
    <div class="font-weight-bold col-4">Code Postal:</div>
    <div class="col-8">
        <label class="mb-0" id="cp">{{ cp }}</label>
    </div>
</div>
<div class="row mb-2">
    <div class="font-weight-bold col-12 col-md-4 m-auto">Lieu:</div>
    <div class="col-12 col-md-8">
        <div class="input-group">
            <select id="sortie_lieu" name="lieu" class="custom-select">
                {% for lieu in lieux %}
                    <option value="{{ lieu.id }}">{{ lieu.nom }}</option>
                {% endfor %}
            </select>
            <div class="input-group-append">
                <a href="{{ path('lieuCreation', {id:0}) }}" class="btn btn-success"><i class="fas fa-plus"></i></a>
            </div>
        </div>
    </div>
</div>
<div id="infoLieu"></div>