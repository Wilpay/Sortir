{% extends('base.html.twig') %}
{% block title %}{{ parent() }} | Profil{% endblock %}
{% block body %}
    <h1 class="display-4">MON PROFIL</h1>
    <hr class="my-3">
    {% if not utilisateur.image is empty %}
        <img src="{{ asset('Files/' ~ utilisateur.image)  }}" class="rounded float-left" alt="..." width="200" height="200">

    {% endif %}
    <div class="container">
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}" role="alert">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}




        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row mb-2">
            <div class="col-12 col-md-4">Pseudo :</div>
            <div class="col-12 col-md-8">
                {{ form_widget(form.pseudo) }}
                {{ form_errors(form.pseudo) }}
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12 col-md-4">Prénom :</div>
            <div class="col-12 col-md-8">
                {{ form_widget(form.prenom) }}
                {{ form_errors(form.prenom) }}
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12 col-md-4">Nom :</div>
            <div class="col-12 col-md-8">
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12 col-md-4">Téléphone :</div>
            <div class="col-12 col-md-8">
                {{ form_widget(form.telephone) }}
                {{ form_errors(form.telephone) }}
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12 col-md-4">Mail :</div>
            <div class="col-12 col-md-8">
                {{ form_widget(form.mail) }}
                {{ form_errors(form.mail) }}
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12 col-md-4">Site :</div>
            <div class="col-12 col-md-8">
                {{ form_widget(form.site) }}
                {{ form_errors(form.site) }}
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12 col-md-4">Mot de passe :</div>
            <div class="col-12 col-md-8">
                {{ form_widget(form.passwordPlain) }}
                {{ form_errors(form.passwordPlain) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12 col-sm-6 pb-3">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-block btn-success'}}, {'label': 'Enregister'}) }}
            </div>
            <div class="col-12 col-sm-6">
                <a href="{{ path('home') }}" class="btn btn-block btn-danger">Annuler</a>
            </div>
        </div>

        {{ form_end(form) }}
        <hr>
        {{  form_start(formPhoto) }}
        {{ form_errors(formPhoto) }}

        <div class="row mb-2">
            <div class="col-12 col-md-4">Photo :</div>
            <div class="col-12 col-md-8">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        {{ form_widget(formPhoto.submit, {'attr': {'class': 'btn btn-outline-secondary'}}, {'label': 'Enregister'}) }}
                    </div>
                    <div class="custom-file">
                        {{ form_widget(formPhoto.file, {'attr': {'class': 'custom-file-label'}}) }}

                    </div>
                </div>

            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12 col-sm-6 pb-3">

            </div>
        </div>
        {{ form_end(formPhoto) }}



    </div>
{% endblock %}