<!DOCTYPE html>
<html>
    <head>
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
        <meta charset="UTF-8">
        <title>{% block title %}Sortie.com{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("css/app.css") }}">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.1/css/all.css">
        {% endblock %}
        <link rel="icon" href="{{ asset("images/favicon.png") }}" />
    </head>
    <body>
        {% block menu %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
                <a class="navbar-brand font-weight-bold pr-2" href="{{ path('home') }}">
                    <i class="fas fa-map-marked-alt pr-2"></i>
                    Sortie.com
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {% if app.user %}

                        {% if is_granted("ROLE_ADMIN") %}
                            <i class="fas fa-user-cog pr-2"></i>
                        {% else %}
                            <i class="fas fa-user pr-2"></i>
                        {% endif %}
                        {{ app.user.pseudo }}
                    {% endif %}
                    <ul class="navbar-nav ml-auto">
                        {% if app.user %}
                            {% if is_granted('ROLE_USER') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('profil') }}">Mon Profil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('groupes') }}">Groupes</a>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('liste_users') }}">Utilisateurs</a>
                                </li>
                            {% endif %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('deconnexion') }}">DÃ©connexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('connexion') }}">Connexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        {% endblock %}
        <div class="jumbotron mt-5">
            {% block body %}{% endblock %}
        </div>

    </body>
</html>
